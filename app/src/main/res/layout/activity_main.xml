<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#000"
        android:stretchColumns="*"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/EdtKQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="right"
                android:padding="50dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/Bnt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Bnt8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Bnt9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/BntDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="Del"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/Bnt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Bnt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Bnt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/BntChia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="/"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/Bnt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Bnt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Bnt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/BntNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="*"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/BntCham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="."
                android:textSize="25dp" />

            <Button
                android:id="@+id/Bnt0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/BntTru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="-"
                android:textSize="25dp" />

            <Button
                android:id="@+id/BntCong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="+"
                android:textSize="25dp" />
        </TableRow>

        <Button
            android:id="@+id/BntBang"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="="
            android:textSize="25dp"
            android:padding="25dp"
            />


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>